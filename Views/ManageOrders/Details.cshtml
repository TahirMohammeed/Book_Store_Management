@model IEnumerable<Book_Store.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-body">
          <h3 class="mb-3">Order Details</h3>
        <table class="table bg-white table-bordered table-hover" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookQty)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookPrice)$
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookQty)
            </td>

        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-sm btn-info">Back to List</a>
</div>
    </div>
</div>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $("#table").DataTable({
            "responsive": true,
            "autoWidth": false,

        });

    });</script>