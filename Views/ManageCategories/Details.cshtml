@model Book_Store.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <!-- /.card -->
            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Details Category</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CategoryId)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>
                    </dl>

                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Index" class="btn btn-sm btn-info">Back to List</a>
                    </div>
                </div>

                <!-- /.card-footer -->

            </div>
            <!-- /.card -->
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
