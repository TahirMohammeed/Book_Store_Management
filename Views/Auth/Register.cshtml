@model Book_Store.Models.Customer

@{
    ViewData["Title"] = "Register";
}



<div class="row mt-5 mb-5 m-4">
    <div class="col-md-3"></div>
    <div class="col-md-6 card p-4 shadow-lg">
        <h5 class="text-center mb-4"><i class="fas fa-user-plus"></i> Register your account</h5>
        <hr style="background-color: #007bff; height: 2px;" />
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><i class="fas fa-user"></i> Full Name</label>
                <input asp-for="CustomerName" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><i class="fas fa-envelope"></i> Email</label>
                <input asp-for="CustomerEmail" class="form-control" placeholder="Enter your email address" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                @if (ViewData["errorMessage"] != null)
                {
                    <div class="text-danger">@ViewData["errorMessage"]</div>
                }
            </div>
            <div class="form-group">
                <label class="control-label"><i class="fas fa-phone"></i> Phone</label>
                <input asp-for="CustomerPhone" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><i class="fas fa-lock"></i> Password</label>
                <input type="password" asp-for="CustomerPassword" class="form-control"
                    placeholder="Enter your password" />
                <span asp-validation-for="CustomerPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><i class="fas fa-map-marker-alt"></i> Address</label>
                <input asp-for="CustomerAddress" class="form-control" placeholder="Enter your address" />
                <span asp-validation-for="CustomerAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-user-plus"></i> Register
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
